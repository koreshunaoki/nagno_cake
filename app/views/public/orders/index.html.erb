 <h2>注文履歴一覧</h2>
 
 
 <table border="3" bordercolor="black">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
    <tr><% @orders.each do |order| %></tr>
      <th><%= order.customer.created_at %></th>
      <th><%= order.customer.address %></th>
      <th><%#= order.customer.item %></th>
      <th><%#= order.customer.total_payment %></th>
      <th><%#= order.customer.status %></th>
      <th><%= link_to "表示する", public_order_path(order), class:"btn btn-success  center-block" %></th>
    <tr><% end %></tr>
  </table>

