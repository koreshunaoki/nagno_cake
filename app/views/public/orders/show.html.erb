<h2>注文履歴詳細</h2>


 <table border="3" bordercolor="black">
    <tr>
      <th>注文日</th>
      <th><%= @order.created_at %></th>
    </tr>
    <tr>
      <th>配送先</th>
      <th><%= @order.customer.postal_code %><br><%= @order.customer.address %><br><%= @order.name %></th>
    </tr>
    <tr>
      <th>支払方法</th>
      <th><%= @order.payment_method %></th>
    </tr>
    <tr>
      <th>ステータス</th>
      <th><%= @order.status %></th>
    </tr>
  </table>

  <table border="3" bordercolor="black">
    <tr>
      <th>商品合計</th>
      <th><%= @order.total_payment %></th>
    </tr>
    <tr>
      <th>送料</th>
      <th><%= shipping_cost = 800 %></th>
    </tr>
    <tr>
      <th>ご請求額</th>
      <th><%= @order.total_payment + shipping_cost %></th>
    </tr>
  </table>

 <% @order.order_details.each do |order_detail| %>
      <tr>
        <th><%= order_detail.item.name %></th>
        <th><%= order_detail.item.taxin_price.floor %></th>
        <th><%= order_detail.amount %></th>
        <th><%= order_detail.item.taxin_price.floor * order_detail.amount %></th>
      </tr>
    <% end %>