<h2>注文情報入力</h2>
 <h4>支払方法</h4>
 <%= form_with model: @order, url: public_orders_confirm_path, local:true do |f| %>
   <div>
    <%= f.radio_button :payment_method, "credit_card" %>
    <%= f.label :payment_method, "クレジットカード" %>
   </div><br>
   <div>
    <%= f.radio_button :payment_method, "transfer" %>
    <%= f.label :payment_method, "銀行振込" %>
    </div>
  <h4>お届け先</h4>

    <div>
      <%= f.radio_button :address, "customer_address" %>
      <%= f.label :address, "ご自身の住所" %>
      <%= current_customer.address %>
    </div>

    <div>
      <%= f.radio_button :address, "registered_address" %>
      <%= f.label :payment_method, "登録済みの住所から選択" %>
      <%= f.collection_select(:address_id, @addresses, :id, :address_detail, prompt: "選択してください") %>
    </div>

    <div>
      <%= f.radio_button :address, "new_address" %>
      <%= f.label :address, "新しいお届け先" %>

    </div>
    <div>
      <%= f.label :postal_code, "郵便番号" %>　　　　　　　　　　<%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div><br>
    <div>
      <%= f.label :address, "住所" %>　　　　　　　　　　　　<%= f.text_field :address, autofocus: true, autocomplete: "address", include_blank: '都道府県' %>
    </div><br>
    <div>
      <%= f.label :name, "宛名　　　　　　　　　　　　 " %><%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div><br>

    <%= f.hidden_field :order_id, value: @order.id %>

    <%= f.submit "確認画面へ進む", class: "btn btn-success btn-lg center-block" %>


  <% end %>