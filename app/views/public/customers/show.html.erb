<h1>マイページ</h1>

<h3>登録情報</h3>
<%= link_to '編集する', edit_public_customer_path(@customer), class:"nav-link text-black" %>
<table border="3" bordercolor="black">
    <tr>
      <th>氏名</th>
      <th><%= @customer.last_name %><%= @customer.first_name %></th>
    </tr>
    <tr>
      <th>カナ</th>
      <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
    </tr>
    <tr>
      <th>郵便番号</th>
      <th><%= @customer.postal_code %></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= @customer.address %></th>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= @customer.telephone_number%></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= @customer.email %></th>
    </tr>

  </table>
  <table>

    <tr>配送先</tr>　　　<tr><%= link_to '一覧を見る', public_addresses_path, class:"btn btn-success btn-lg center-block" %></tr><br>
    <tr>注文履歴</tr>　　<tr><%= link_to '一覧を見る', public_orders_path, class:"btn btn-success btn-lg center-block" %></tr>

  </table>