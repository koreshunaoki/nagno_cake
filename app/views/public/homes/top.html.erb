
<%= image_tag 'birthday-gc2d6f4e29_640', size: "600x350" %>
<h3>新着商品</h3>
  <div>
    <% @items.each do |item| %>
      <%= link_to public_item_path(item) do %><%= attachment_image_tag item, :image, :fill, 100, 100, format:'jpg', fallback:"no_image.jpg" %><% end %><br>
      <%= item.name %><br>
      ￥<%= item.price %><br>
    <% end %>
    <%= link_to 'すべての商品を見る', public_items_path, class:"nav-link" %>
  </div>

