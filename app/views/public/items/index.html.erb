<h2>商品一覧</h2>


<table>
  <tbody>
    <tr><% @items.each do |item| %></tr>
    <tr><%= link_to public_item_path(item) do %><%= attachment_image_tag item, :image, :fill, 100, 100, format:'jpg', fallback: "no_image.jpg" %><% end %></tr><br>
    <tr><%= item.name %></tr><br>
    <tr><%= item.taxin_price.floor %></tr><br>
    <tr><% end %></tr>
  </tbody>
</table>


<%= paginate @items %>