<h1>会員情報編集</h1>
<%= form_with model:@customer, url: admin_customer_path, local:true do |f| %>
<div class_field>
  <h3>商品ID</h3>
  <%= customer_id %>
  <h3>氏名</h3>
  <%= f.text_field :last_name, class:"form-control name" %><%= f.text_field :first_name, class:"form-control name" %>
  <h3>フリガナ</h3>
  <%= f.text_field :last_name_kana, class:"form-control name" %><%= f.text_field :first_name_kana, class:"form-control name" %>
  <h3>郵便番号</h3>
  <%= f.text_field :postal_code, class:"form-control name" %>
  <h3>住所</h3>
  <%= f.text_field :address, class:"form-control name" %>
  <h3>電話番号</h3>
  <%= f.text_field :telephone_number, class:"form-control name" %>
  <h3>メールアドレス</h3>
  <%= f.text_field :email, class:"form-control name" %>
  <h3>販売ステータス</h3>
  <%= f.radio_button :is_deleted, "valid" %>
　<%= f.label :is_deleted, "有効" %>

  <%= f.radio_button :is_deleted, "secession" %>
  <%= f.label :is_deleted, "退会" %>

</div>
<%= f.submit '変更を保存する', class:"btn btn-success" %>

<% end %>