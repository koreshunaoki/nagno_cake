<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr><% @customers.each do |item| %></tr>
      <th><%= customer.id %></th>
      <th><%= link_to admin_customer_path(customer) do %><%= customer.name %><% end %></th>
      <th><%= customer.email %></th>
      <th><%= item.is_active %></th>
    <tr><% end %></tr>
  </tbody>
</table>

<%= paginate @customers %>