<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr><% @customers.each do |customer| %></tr>
      <th><%= customer.id %></th>
      <th><%= link_to admin_customer_path(customer) do %><%= customer.last_name %><%= customer.first_name %><% end %></th>
      <th><%= customer.email %></th>
      <th>
        <% if customer.is_deleted %>
        <span>退会</span>
        <% else %>
        <span>有効</span>
        <% end %>
      </th>
    <tr><% end %></tr>
  </tbody>
</table>

<%= paginate @customers %>