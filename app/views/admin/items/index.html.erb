<h1>商品一覧</h1>
<%= link_to '新規登録', new_admin_item_path, class:"btn btn-success" %>


<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr><% @items.each do |item| %></tr>
      <th><%= item.id %></th>
      <th><%= link_to admin_item_path(item) do %><%= item.name %><% end %></th>
      <th><%= item.price %></th>
      <th><%= item.genre.name %></th>
      <th><%= item.is_active %></th>
    <tr><% end %></tr>
  </tbody>
</table>
<%= paginate @items %>
