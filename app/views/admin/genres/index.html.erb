<h1>ジャンル一覧・追加</h1>

<%= form_with model:@genre, url: admin_genres_path, method: :post, local:true do |f| %>
  <div class_field>
    <h3>ジャンル名</h3>
    <%= f.text_field :name, class:"form-control name" %>
  </div>
  <%= f.submit '新規登録', class:"btn btn-success" %>
<% end %>
<h3>ジャンル</h3>
<% @genres.each do |genre| %>
  <%= genre.name %>
  <%= link_to '編集する', edit_admin_genre_path(genre), class:"btn btn-success" %>
<% end %>

