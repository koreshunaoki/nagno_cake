<div class="container takasa">
  <h2>管理者ログイン</h2>
<%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
<div class="field">
      <%= f.label :email, "メールアドレス" %>　　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div><br>
    <div class="field">
      <%= f.label :password_confirmation, "パスワード" %>　　　　　　　<%= f.password_field :password %>
    </div><br>
    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-success btn-lg center-block" %>
    </div>
  <% end %>
</div>

